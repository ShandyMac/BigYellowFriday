<div id="mainContainer">
    
    <div id="pictureContainer" class="container">
        <div class="row">
            <img src="../../Content/images/byfsmall.jpg" class="span2 img-rounded" />
            <h2 class="span10 offset3">@ViewBag.Message</h2>
        </div>
    </div>
    <div id="tableContainer" class="container">
        <table id="table" class="table table-condensed table-bordered"></table>
    </div>
    <div id="eventTriggerContainer" class="container">
        <button class="btn offset5" data-toggle="modal" id="run">Run <i class="icon-check"></i></button>
    </div>
    <div id="dialogContainer">
        <div id="winner-dialog" class="modal hide fade" role="dialog">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">x</button>
                <h3>Winner!</h3>
            </div>
            <div class="modal-body" style="height: 200px;">
                <p>
                    And the winner is...
                </p>
                <strong id="winner"></strong>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>            

            <div class="clearfloat"></div>
        </div>
    </div>
</div>